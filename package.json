{
    "name": "scriptin",
    "version": "1.0.10",
    "description": "Javascript and CSS loaded that uses localforage to cache scripts on browser for super-fast loads.",
    "main": "src/scriptin.js",
    "directories": {
        "example": "example"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
        "build:dev": "webpack watch --config webpack.config.js",
        "prepare": "husky install"
    },
    "lint-staged": {
        "./src/*": "prettier --write --ignore-unknown"
    },
    "keywords": [
        "script",
        "css",
        "loader",
        "cache"
    ],
    "author": "Anthony Mugendi <ngurumugz@gmail.com>",
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "compression-webpack-plugin": "^10.0.0",
        "cross-env": "^7.0.3",
        "husky": "^8.0.0",
        "prettier": "^3.0.1",
        "terser-webpack-plugin": "^5.3.9",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}
