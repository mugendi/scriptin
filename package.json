{
  "name": "scriptin",
  "version": "2.0.0",
  "description": "Javascript and CSS loaded that uses localforage to cache scripts on browser for super-fast loads.",
  "main": "src/scriptin.js",
  "type": "module",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "serve:example": "node example/server.js",
    "build:dev": "nodemon -w webpack.config.js --exec 'webpack watch --config webpack.config.js'",
    "dev" : "run-p build:dev serve:example",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./src/*": "prettier --write --ignore-unknown"
  },
  "keywords": [
    "script",
    "css",
    "loader",
    "cache"
  ],
  "author": "Anthony Mugendi <ngurumugz@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "compression-webpack-plugin": "^10.0.0",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.3.1",
    "husky": "^8.0.0",
    "koa": "^2.15.0",
    "koa-static": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "date-fns": "^3.3.1"
  }
}
